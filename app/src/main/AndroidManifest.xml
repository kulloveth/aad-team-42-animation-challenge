<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aad_team_42.travelmanticsrebranded" >

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/travis_logo"
        android:label="@string/app_tit"
        android:roundIcon="@drawable/travis_logo"
        android:supportsRtl="true"
        android:theme="@style/MainTheme" >
        <activity android:name=".views.activities.AddEditPlaceActivity" >
        </activity>
        <activity android:name=".views.activities.DetailActivity" />
        <activity android:name=".views.activities.SignUpActivity" />
        <activity android:name=".views.activities.ChooseSignIn" />
        <activity android:name=".views.activities.BaseActivity" />
        <activity android:name=".views.activities.LoginActivity" />
        <activity
            android:name=".views.activities.MainActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".views.activities.SplashScreenActivity"
            android:theme="@style/MainTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.OnboardingActivity"
            android:theme="@style/MainTheme" />
        <activity android:name=".views.activities.PaymentActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="co.paystack.android.PublicKey"
            android:value="paystack public key" />
    </application>

</manifest>