<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.DetailActivity">

    <TextView
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_25dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/tour_title"
        android:textColor="#1A1A1A"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_tour"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/dubai"
        app:layout_constraintStart_toStartOf="@id/destination"
        app:layout_constraintTop_toBottomOf="@id/destination" />

    <TextView
        android:id="@+id/tour_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_8dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/tour_detail"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/image_tour"
        app:layout_constraintTop_toBottomOf="@id/image_tour" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tour_detail"
        android:layout_marginStart="@dimen/dimens_8dp"
        android:layout_toEndOf="@+id/image_tour"
        android:fontFamily="@font/montserrat"
        android:text="@string/price"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/image_tour"
        app:layout_constraintStart_toEndOf="@id/image_tour"
        app:layout_constraintTop_toTopOf="@id/image_tour" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/dimens_8dp"
        android:text="Make reservation"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tour_detail" />

